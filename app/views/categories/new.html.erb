
<%= form_with scope: :category, url: categories_path, local: true do |form| %>
  <p>
    <%= form.label :category_name %><br>
    <%= form.text_field :category_name %>
  </p>

  <p>
    <%= form.label :category_author %><br>
    <%= form.text_field :category_author %>
  </p>

  <p>
    <%= form.submit %>
  </p>
<% end %>